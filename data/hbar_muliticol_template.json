{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
  "style": {
    "cell": {
      "stroke": "transparent"
    }
  }},
  "vconcat": [
    {
      "width": 600,
      "height": 600,
      "title": {
        "text": "",
        "anchor": "start"
      },
      "data": {
        "values": []
      },
      "encoding": {
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "sort": null,
          "axis": {"domain": true, "grid": false, "labelFontSize": 17, "labelLimit": 0, "titleColor": "white"}
        },
        "x": {
          "field": "value",
          "type": "quantitative",
          "axis": null
        },
        "yOffset": {"field": "group"},
        "color": {"field": "group",
          "legend": {
            "orient": "top",
            "direction": "horizontal",
            "title": null,
            "labelFontSize": 24,
            "labelLimit": 0
        }
        },
        "opacity": {
            "condition": {
              "test": "datum.value == 0",
            "value": 0
          },
            "value": 1
        }
      },
      "layer": [
        {
          "mark": {"type": "bar"},
          "encoding": {
            "opacity": {
              "condition": [
                {"test": "datum.Entity === 'none'", "value": 1}
              ],
              "value": 1
            },
            "size": {
              "condition": [
                {"test": "datum.Entity === 'none'", "value": 30}
              ],
              "value": 40
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dx": 0,
            "dy": 0,
            "xOffset": -12,
            "yOffset": 0,
            "angle": 0,
            "align": "right",
            "baseline": "middle",
            "font": "serif",
            "fontSize": 24,
            "fontWeight": "normal",
            "opacity": 1
          },
          "encoding": {
            "text": {"field": "value", "type": "quantitative"},
            "color": {"value": "#000000"},
            "x": {"field": "value", "type": "quantitative", "stack": "zero"}
          }
        }
      ]
    }
  ],
  "name": "template"
}